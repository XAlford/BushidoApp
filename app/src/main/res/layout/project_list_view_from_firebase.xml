<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_card_view"
    android:layout_marginBottom="16dp"

    android:layout_width="match_parent"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#7CB342"


        android:layout_height="match_parent">

        <ImageView
            android:layout_width="125dp"
            android:paddingLeft="8dp"

            android:layout_height="50dp"
            android:src="@drawable/bushido"
            android:tint="#fff"/>


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_marginTop="16dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/title_list"

            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:text="TITLE"


            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="28dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_list"
            android:maxLines="10"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:id="@+id/discipline_list"
            android:text="DISCIPLINE"

            android:drawablePadding="16dp"
            android:drawableTint="@android:color/white"
            android:drawableLeft="@drawable/ic_fitness_center_black_24dp"

            android:textColor="#fff"
            android:textStyle="bold"

            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discipline_list"
            android:maxLines="10"
            android:drawableTint="@android:color/white"

            android:drawableLeft="@drawable/ic_build_black_24dp"
            android:drawablePadding="16dp"
            android:padding="8dp"
            android:layout_marginLeft="16dp"

            android:text="DESCRIPTION"
            android:textColor="#fff"
            android:id="@+id/description_list"
            android:textStyle="bold"

            android:textSize="14dp" />



        <TextView

            android:drawablePadding="16dp"
            android:drawableTint="@android:color/white"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_list"
            android:maxLines="10"
            android:layout_marginLeft="16dp"

            android:padding="8dp"
            android:text="DATE"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/date_title"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:layout_marginLeft="16dp"

            android:padding="8dp"

            android:drawablePadding="16dp"
            android:drawableTint="@android:color/white"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:layout_below="@id/date_title"
            android:text="MENTOR/APPRENTICE"
            android:textColor="#fff"
            android:textStyle="bold"

            android:id="@+id/mentor_title"
            android:textSize="14dp" />









        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash_on_black_24dp"
            android:layout_margin="16dp"
            android:background="#7CB342"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:id="@+id/req_ment_btn"
            />
